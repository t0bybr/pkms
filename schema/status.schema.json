{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pkms.local/schemas/status.schema.json",
  "title": "Status",
  "description": "Document status and relevance tracking",
  "type": "object",
  "properties": {
    "relevance_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Computed relevance score (0.0-1.0)"
    },
    "archived": {
      "type": "boolean",
      "description": "Whether document is archived"
    },
    "consolidated_into": {
      "type": ["string", "null"],
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
      "description": "ULID of synthesis document if consolidated, null otherwise"
    },
    "human_edited": {
      "type": "boolean",
      "description": "Whether document was manually edited after agent creation"
    }
  },
  "required": ["relevance_score", "archived"],
  "additionalProperties": false
}
