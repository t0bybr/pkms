{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pkms.local/schemas/record.schema.json",
  "title": "Record",
  "description": "Document metadata record (derived from markdown + frontmatter)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$",
      "description": "ULID of document"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]{1,60}$",
      "description": "URL-safe slug derived from title"
    },
    "path": {
      "type": "string",
      "description": "Relative path to markdown file",
      "pattern": "^notes/.+\\.md$"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Document title (from frontmatter)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "description": "Tags (from frontmatter)"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Alternative names for linking"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Categories (from frontmatter)"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}$",
      "description": "ISO 639-1 language code (auto-detected or from frontmatter)"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp (from file or frontmatter)"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 last modified timestamp (from file mtime)"
    },
    "date_semantic": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Semantic date (when the event occurred, from frontmatter)"
    },
    "full_text": {
      "type": "string",
      "description": "Full markdown content (without frontmatter)"
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "description": "Forward links (outgoing wikilinks)"
    },
    "backlinks": {
      "type": "array",
      "items": {
        "$ref": "link.schema.json"
      },
      "description": "Backlinks (incoming wikilinks from other docs)"
    },
    "content_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA256 hash of full_text"
    },
    "file_hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA256 hash of entire file (including frontmatter)"
    },
    "status": {
      "$ref": "status.schema.json",
      "description": "Document status and relevance"
    },
    "agent": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Agent identifier that created/modified this record"
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Agent confidence score"
        },
        "reviewed": {
          "type": "boolean",
          "description": "Whether human reviewed agent output"
        }
      },
      "required": ["id", "confidence", "reviewed"],
      "additionalProperties": false
    },
    "embedding_meta": {
      "$ref": "embedding_meta.schema.json",
      "description": "Embedding metadata per space"
    },
    "facets": {
      "type": "object",
      "description": "Type-specific facets (invoice, pdf, etc.)",
      "additionalProperties": true
    },
    "source": {
      "type": "object",
      "properties": {
        "repo": {
          "type": "string",
          "description": "Git repository URL"
        },
        "commit": {
          "type": "string",
          "pattern": "^[a-f0-9]{7,40}$",
          "description": "Git commit hash"
        }
      },
      "required": ["repo", "commit"],
      "additionalProperties": false
    },
    "doc_type": {
      "type": "string",
      "enum": ["note", "pdf", "invoice", "email", "image"],
      "default": "note",
      "description": "Document type for faceting"
    }
  },
  "required": [
    "id",
    "slug",
    "path",
    "title",
    "language",
    "created",
    "updated",
    "full_text",
    "content_hash",
    "file_hash",
    "status"
  ],
  "additionalProperties": false
}
